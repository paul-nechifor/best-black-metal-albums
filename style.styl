.albums
  text-align center
  font-size 0

.album
  background-size cover
  display inline-block
  filter saturate(0%) brightness(90%)
  height album-size
  width album-size
  margin 10px
  position relative

  & > a
    font-size 20px
    display none
    position absolute
    color #fff
    background #000
    width 35px
    height 35px
    line-height 35px
    text-align center

  &:hover > a
    display block

