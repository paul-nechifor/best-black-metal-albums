album-size = 150px

*
  margin 0
  padding 0
  border-collapse inherit
  font-size 100%

html
  box-sizing border-box
  line-height 1
  font-family sans-serif
  background #000

h1
  height 165px
  background-image url(title.png)
  background-position center center
  background-repeat no-repeat
  text-indent -9999px
  margin 0

